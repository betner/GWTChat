<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
 
  
    <servlet>
    <servlet-name>ChatServer</servlet-name>
    <servlet-class>com.chat.server.ChatServer</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ChatServer</servlet-name>
    <url-pattern>/gwtchat/chatServer</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>GWTChat.html</welcome-file>
  </welcome-file-list>

</web-app>
